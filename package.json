{
  "name": "peertube-plugin-auth-soapbox",
  "version": "0.0.1",
  "description": "A PeerTube server plugin that adds support for external authentication via OAuth from Soapbox",
  "engine": {
    "peertube": ">=6.0.3"
  },
  "keywords": [
    "peertube",
    "plugin",
    "auth",
    "oauth2",
    "soapbox",
    "pleroma"
  ],
  "homepage": "https://github.com/gigaohm/peertube-plugin-auth-soapbox",
  "author": "lantrix",
  "bugs": "https://github.com/gigaohm/peertube-plugin-auth-soapbox/issues",
  "library": "./dist/server/plugin.js",
  "staticDirs": {},
  "css": [],
  "clientScripts": [
    {
      "script": "dist/client/common-client-plugin.js",
      "scopes": [ "common" ]
    }
  ],
  "translations": {
    "en": "./languages/en.json",
    "fr-FR": "./languages/fr.json"
  },
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "webpack --config webpack.config.js",
    "dev": "npm run build && npm run watch",
    "watch": "webpack --config webpack.config.js --watch"
  },
  "devDependencies": {
    "@peertube/peertube-types": "^6.0.3",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.0"
  }
}
